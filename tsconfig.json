{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Set to true for better type safety
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // Changed from "node" to "NodeNext"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "/*": [
        "./node_modules/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "constants/index.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
